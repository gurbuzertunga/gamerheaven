<div class="w-6/12 mx-auto h-screen">
<h1 class="block text-gray-700 text-sm font-bold mb-2 mt-10">Create a new account</h1>
<div class="flex items-center border-b border-teal-500 py-2">

<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :username, class:'block text-gray-700 text-sm font-bold mb-2 border-teal-500 mb-5' %>
    <%= form.text_field :username, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
  </div>

  <div class="actions">
    <%= form.submit "Create Account", class:'bg-gray-500 mt-5 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
  </div>
<% end %>
</div>
</div>