<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <%= error %>
  <% end %>
<% end %>

<%= form_for @article, multipart:true do |f| %>
  <%= f.label :file, 'Article Image' %>
  <%= f.file_field :file, id: 'file' %>
  <%= f.label :title, 'Article Title' %>
  <%= f.text_field :title, id: 'title' %>
  <%= f.label :body, 'Article Body' %>
  <%= f.text_area :body, id: 'body', size: '4x3' %>
  <%= f.label :text, 'Categories' %>
  <%= f.select :category_ids, Category.all.map{|x| [x.name,x.id]}, {}, multipart: true, id: 'categories' %>
  <%= f.submit %>
<% end%>