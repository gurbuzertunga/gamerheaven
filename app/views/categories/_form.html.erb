<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <%= error %>
  <% end %>
<% end %>
<div class="w-full my-10">
<%= form_for @category do |f| %>
  <%= f.label :name, 'Category Name', class:'block text-gray-700 text-sm font-bold mb-2'  %>
  <%= f.text_field :name, id:'name', class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  <div class="flex justify-between">
  <%= f.label :importance, 'Category Importance', class:'block text-gray-700 text-sm font-bold mb-2' %>
  <p class="block text-gray-700 text-sm font-bold mb-2'">Type in a number betwee 1-10!</p>
  </div>
  <div class="p-10 ml-56 category_selector">
  <%= f.select(:importance, (1..10), {}, { :class => 'mx-auto ml-10 p-5 rounded-full' }) %>
  </div>
  <div class="mt-4 text-center">
  <%= f.submit "Create Category", class:"bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline mx-auto align-center" %>
  <%= button_to 'Back', categories_path, class:"bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline mx-auto align-center" %>
  </div>
<% end%>
</div>